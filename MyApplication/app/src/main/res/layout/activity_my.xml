<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyActivity">
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="434dp"
            android:layout_height="307dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/square"
                android:id="@+id/redSquare"
                android:contentDescription="I am a square"
                android:layout_centerInParent="true"
                android:layout_row="0"
                android:layout_column="0" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/circle"
                android:id="@+id/blueCircle"
                android:contentDescription="I am a circle"
                android:layout_centerInParent="true"
                android:layout_row="0"
                android:layout_column="1" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/triangle"
                android:id="@+id/greenTriangle"
                android:contentDescription="I am a triangle"
                android:layout_centerInParent="true"
                android:layout_row="0"
                android:layout_column="5" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/button"
                android:id="@+id/button1"
                android:contentDescription="I am a button"
                android:layout_centerInParent="true"
                android:layout_row="0"
                android:layout_column="7" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/button"
                android:id="@+id/button2"
                android:contentDescription="I am a button"
                android:layout_centerInParent="true"
                android:layout_row="0"
                android:layout_column="8" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/button"
                android:id="@+id/button0"
                android:contentDescription="I am a button"
                android:layout_centerInParent="true"
                android:layout_row="1"
                android:layout_column="8" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
